{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2018",
    "rootDir": "./src/",
    "outDir": "./lib/",
    "importHelpers": true,
    "noEmit": true,
    "types": [],
  },
  "include": ["src"],
  "exclude": []
}
